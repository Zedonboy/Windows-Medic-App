<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Viotech"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" x:Class="Viotech.LoginFace"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Width="150" Height="150">
        <Rectangle Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="50" Margin="0,100,0,0" Stroke="Black" VerticalAlignment="Top" Width="150"/>

        <materialDesign:ColorZone Content="ColorZone" HorizontalAlignment="Right" Margin="0,5,30,0" VerticalAlignment="Top" Height="100" Width="100" CornerRadius="50"/>

    </Grid>
</UserControl>
